								{# <button type="button" class="btn btn-danger delete" data-toggle="modal" data-target="#exampleModal" data-id="{{ employee.id }}" data-name="{{ employee.name }}" data-surname="{{ employee.surname }}">
									Usuń
								</button> #}
                                <button type="button" class="btn btn-danger delete"> Usuń</button>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

