										</div>
									{# {% endif %} #}
								</div>
							</td>
							<td>
								{{ employee.name }}
							</td>
							<td>
								{{ employee.surname }}
							</td>

							<td>
								{{ employee.email }}
							</td>
							<td>
								{{ employee.phone }}
							</td>
							<td>
								{# {{ employee.date_add|date('Y-m-d') }} #}
							</td>

							<td style="max-width: 4.7rem;">
