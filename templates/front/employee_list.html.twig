					<tr>
						<th scope="col" class="col1"></th>
						<th scope="col" class="col1 thpointer" onclick="sortTable(1)">Imię
							<i class="fa fa-arrow-down" aria-hidden="true"></i>
						</th>
						<th scope="col" class="col1 thpointer" onclick="sortTable(2)">Nazwisko
